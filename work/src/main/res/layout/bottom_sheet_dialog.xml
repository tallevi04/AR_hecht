<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_all_corner"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#c0c0c0"
            android:layout_marginTop="5dp"
            android:layout_marginStart="14dp"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:padding="8dp"
            android:text="Shop Booking"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#c0c0c0"
            android:layout_marginStart="14dp"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/tvdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:padding="8dp"
            android:text="Home Booking"
            android:textColor="#000000"
            android:textSize="14dp" />

    </LinearLayout>

    <View
        android:id="@+id/viewLiner"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/llTop"
        android:background="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewLiner"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_all_corner"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancelDialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="14dp"
            android:text="Cancel"
            android:textColor="#000000"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tvMoreDialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="14dp"
            android:text="View More"
            android:background="#4B8EFF"
            android:textColor="#ffffff"
            android:textSize="14dp" />

    </LinearLayout>


</RelativeLayout>